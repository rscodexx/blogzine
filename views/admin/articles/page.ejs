<%- include('../../partials/header.ejs') %>
<%- include('../../partials/homenavbar.ejs') %>

<body>
<div class="container">
    <hr>
    <% result.articles.rows.forEach(article => { %>
        <div class="card mb-3">
            <card class="card-header">
                <h2><%- article.title %></h2>
            </card>
            <card class="card-body">
                <a href="/view/<%- article.slug %>" class="btn btn-success">Ler Arigo</a>
            </card>
        </div>
    <% }) %>

    <div class="row">
        <div class="col col-12">

            <% if(result.page > 1) { %>
                <a href="/articles/page/<%= result.page - 1 %>" class="float-left">Anterior</a>
            <% } else if(result.page === 1) {  %>
                    <a href="/" class="float-left">Anterior</a>
            <% } %>

            <% if(result.next) { %>
                <a href="/articles/page/<%= result.page + 1%>" class="float-right">Pr√≥ximo</a>
            <% } %>
        </div>
        <hr>
    </div>
    <hr>

</div>
</body>

